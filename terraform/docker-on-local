mkdir learn-terraform-docker-container
cd learn-terraform-docker-container
nano main.tf
---
terraform {
  required_providers {
    docker = {
      source  = "kreuzwerker/docker"
      version = "~> 3.0.1"
    }
  }
}

provider "docker" {}

resource "docker_image" "nginx" {
  name         = "nginx"
  keep_locally = false
}

resource "docker_container" "nginx" {
  image = docker_image.nginx.image_id
  name  = "tutorial"

  ports {
    internal = 80
    external = 8000
  }
}
---

terraform init
terraform plane
terraform apply

visiting localhost:8000

docker ps

terraform destroy
